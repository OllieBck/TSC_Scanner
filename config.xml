<?xml version='1.0' encoding='utf-8'?>
<widget id="org.adaptivedesign" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>QR_Cam_Code</name>
    <description>
        TSC_Scanner speaks out QRCodes
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    <engine name="ios" spec="~4.5.4" />
    <engine name="android" spec="~7.0.0" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^7.0.4">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
        <variable name="CAMERA_USAGE_DESCRIPTION" value="" />
        <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="" />
    </plugin>
    <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
        <string>Allow to Take photos</string>
    </edit-config>
</widget>
